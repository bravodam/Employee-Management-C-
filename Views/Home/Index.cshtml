@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
    var _emp = new MockEmployeeRepository();
    ViewBag.employees = _emp.GetAllEmployees().Count();

}

<div class="card" style="width: 100%;">
    <div class="card-header bg-primary ">
        Employee Overview
    </div>
    <div class="card-body text-center">
        <div class="row">
            <div class="col-md-3">
                <div class="card pt-4 pb-4">
                    <h4><i class="fa fa-user"></i>  @_emp.GetAllEmployees().Count(e => e.Department == Dept.IT)</h4>
                    <h6 class="card-subtitle mb-2 text-muted">IT</h6>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card dash-box pt-4 pb-4">
                    <h4><i class="fa fa-list-alt"></i>  @_emp.GetAllEmployees().Count(e => e.Department == Dept.Payroll)</h4>
                    <h6 class="card-subtitle mb-2 text-muted">Payroll</h6>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card dash-box pt-4 pb-4">
                    <h4><i class="fa fa-pencil"></i>  @_emp.GetAllEmployees().Count(e => e.Department == Dept.HR)</h4>
                    <h6 class="card-subtitle mb-2 text-muted">HR</h6>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card dash-box mt-4 pb-4">
                    <h4> <i class="fa fa-stats"></i>  12,334</h4>
                    <h6 class="card-subtitle mb-2 text-muted">Visitors</h6>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4" style="width: 100%;">
    <div class="card-header bg-primary ">
        Latest Employees
    </div>
    <div class="card-body text-center">
        <div class="row">
            <div class="table-responsive-sm col-md-12">
                <table class="table table-striped table-hover">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th class="d-sm-table-cell">Department</th>
                        <th></th>
                    </tr>
                    @foreach (var employee in _emp.GetAllEmployees())
                    {
                        <tr>
                            <td>@employee.Name</td>
                            <td>@employee.Email</td>
                            <td class="d-sm-table-cell">@employee.Department</td>
                            <td>
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                                <a class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
