@model IEnumerable<Student>
@inject IEmployeeRepository _empRepository

@{
    ViewBag.Title = "Students List";
}


<div class="card mb-4" style="width: 100%;">
    <div class="card-header bg-primary ">
        All Students
    </div>
    <div class="card-body text-center">

        <div class="text-right p3 mb-3 p-auto">
            <a asp-controller="student" asp-action="register" class=" btn btn-primary" style="width: auto">Add Student</a>
        </div>

        <div class="row">
            <div class="table-responsive-sm col-md-12">
                <table id="example" class="table table-striped table-bordered table-hover" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Age</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        console.log("hello");
        exampleLoad("/student/getall/", ["name", "email", "gender", "age", "studentId"], "student");
    </script>
}