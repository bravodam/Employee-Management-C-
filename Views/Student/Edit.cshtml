@model EditStudentViewModel
@inject IEmployeeRepository _empRepository

@{
    ViewBag.Title = "Create Employee";
    var _emp = new MockEmployeeRepository();
    ViewBag.employees = _emp.GetAllEmployees().Count();
}

<form asp-controller="student" asp-action="edit" method="post" class="mt-3">
    <input type="hidden" asp-for="StudentId"/>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Gender" class="form-control" placeholder="Gender" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Age" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Age" class="form-control" placeholder="Age" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary form-control">Submit</button>
        <a class="btn btn-default border" asp-controller="student" asp-action="index">Cancel</a>
    </div>
</form>