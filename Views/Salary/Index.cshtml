@model IEnumerable<Salary>
@inject IEmployeeRepository _empRepository

@{
    ViewBag.Title = "Employments List";
}


<div class="card mb-4" style="width: 100%;">
    <div class="card-header bg-primary ">
        All Employments
    </div>
    <div class="card-body text-center">

        <div class="text-right p3 mb-3 p-auto">
            <a asp-controller="salary" asp-action="create" class=" btn btn-primary" style="width: auto">Add Salary</a>
        </div>

        <div class="row">
            <div class="table-responsive-sm col-md-12">
                <table id="example" class="table table-striped table-bordered table-hover" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Company</th>
                            <th>Role</th>
                            <th>Pay</th>
                            <th></th>
                        </tr>
                    </thead>

                </table>
                `
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        exampleLoad("/salary/getall/", ["studentName", "companyName", "role", "amount", "id"], "salary");
    </script>
}
