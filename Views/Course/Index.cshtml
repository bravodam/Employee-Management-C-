@model IEnumerable<Course>
@inject IEmployeeRepository _empRepository

@{
    ViewBag.Title = "Course List";
}


<div class="card mb-4" style="width: 100%;">
    <div class="card-header bg-primary ">
        All Courses
    </div>
    <div class="card-body text-center">

        <div class="text-right p3 mb-3 p-auto">
            <a asp-controller="course" asp-action="addcourse" class=" btn btn-primary" style="width: auto">Add Course</a>
        </div>

        <div class="row">
            <div class="table-responsive-sm col-md-12">
                <table id="example" class="table table-striped table-bordered table-hover" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Code</th>
                            <th>Instructor</th>
                            <th>Duration</th>
                            <th></th>
                        </tr>
                    </thead>

                </table>
                `
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        exampleLoad("/course/getall/", ["title", "code", "instructor", "duration", "courseId"], "course");
    </script>
}
