@model GuarantorEditViewModel
@inject IEmployeeRepository _empRepository

@{
    ViewBag.Title = "Edit Guarantor";
    var _emp = new MockEmployeeRepository();
    ViewBag.employees = _emp.GetAllEmployees().Count();
}

<form asp-controller="guarantor" asp-action="edit" method="post" class="mt-3">
    <input type="hidden" asp-for="ID" />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="StudentId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="StudentId" class="form-control" placeholder="StudentID" />
            <span asp-validation-for="StudentId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control" placeholder="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DocUrl" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DocUrl" class="form-control" placeholder="Doc Url" />
            <span asp-validation-for="DocUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary form-control">Update</button>
        <a asp-controller="Guarantor" asp-action="Index" class="btn btn-default border">Cancel</a>
    </div>
</form>