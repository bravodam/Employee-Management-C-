@model AddGuarantorViewModel
@inject IEmployeeRepository _empRepository

@{
    ViewBag.Title = "Create Guarantor";
    var _emp = new MockEmployeeRepository();
    ViewBag.employees = _emp.GetAllEmployees().Count();
}

    <form asp-controller="guarantor" asp-action="addguarantor" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="StudentId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                @if (Model.StudentId == 0)
                {
                    <input asp-for="StudentId" class="form-control" placeholder="Phone" />
                }
                else
                {
                    <input asp-for="StudentId" type="hidden" class="form-control" placeholder="Phone" />

                }
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Phone" class="form-control" placeholder="Phone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="DocUrl" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="DocUrl" class="form-control" placeholder="DocUrl" />
                        <span asp-validation-for="DocUrl" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-danger" asp-validation-summary="All"></div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary form-control">Submit</button>
                    <a class="btn btn-default border" asp-controller="guarantor" asp-action="index">Back</a>
                </div>
            </form>
