@model IEnumerable<Programme>
@inject IEmployeeRepository _empRepository

@{
    ViewBag.Title = "Programme List";
}


<div class="card mb-4" style="width: 100%;">
    <div class="card-header bg-primary ">
        All Programmes
    </div>
    <div class="card-body text-center">

        <div class="text-right p3 mb-3 p-auto">
            <a asp-controller="programme" asp-action="create" class=" btn btn-primary" style="width: auto">Add Program</a>
        </div>

        <div class="row">
            <div class="table-responsive-sm col-md-12">
                <table id="example" class="table table-striped table-bordered table-hover" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Cost</th>
                            <th>Duration</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                </table>
                `
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        exampleLoad("/programme/getall/", ["name", "cost", "duration", , "programmeId"], "programme");
    </script>
}
